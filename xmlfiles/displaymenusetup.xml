		</area>
		<area condition="{setupIconbar}" x="0" y="73%" width="100%" height="27%" layer="3">
			<drawimage  x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="setupIcons" />
		</area>
	</background>

	<header>
		<area condition="eq({indexmainMenuOrientation},0)" x="0" y="2%" width="60%" height="7%" layer="3">
			<drawtext x="4%" valign="center" font="{light}" fontsize="80%" color="{clrLightGray}" text="{title}" />
		</area>
		<area condition="eq({indexmainMenuOrientation},1)" x="3%" y="2%" width="60%" height="7%" layer="3">
			<drawtext x="4%" valign="center" font="{light}" fontsize="80%" color="{clrLightGray}" text="{title}" />
		</area>
	</header>

