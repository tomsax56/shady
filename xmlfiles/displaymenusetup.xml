		</area>
		<area condition="eq({indexmainMenuOrientation},0)" x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMainShady" />
		</area>
		<area condition="eq({indexmainMenuOrientation},1)" x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMainShadyLeft" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="3">
			<drawimage condition="eq({indexmainMenuOrientation},0)" x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />
