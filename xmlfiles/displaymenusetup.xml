		</listelement>

		<currentelement delay="0" fadetime="300">
			<area condition="{setupIconbar}" x="0" y="100%" width="100%" height="70%" layer="4">
				<drawimage imagetype="menuicon" path="{icon}" width="100%" height="100%"/>
			</area>
